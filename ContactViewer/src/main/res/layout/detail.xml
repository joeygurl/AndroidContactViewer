<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <Button
            android:id="@+id/go_to_contacts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:padding="16dp"
            android:layout_margin="10dp"
            android:text="Contacts" />

        <Button
            android:id="@+id/edit_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:padding="16dp"
            android:layout_margin="10dp"
            android:layout_alignParentEnd="true"

            android:text="Edit" />

    </RelativeLayout>

    <ImageView android:id="@+id/details_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:src="@drawable/ic_launcher"/>


    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/details_table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <!-- Title -->
        <TableRow
            android:id="@+id/title_table_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp" >

            <ImageView
                android:id="@+id/details_title_image"
                android:padding="4dp" />

            <TextView
                android:id="@+id/details_title_header"
                android:text="Title:"
                android:padding="4dp"
                android:layout_marginRight="10dp"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/details_title"
                android:text="Mr"
                android:padding="4dp"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </TableRow>

        <!-- Name -->
        <TableRow
            android:id="@+id/name_table_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp" >

            <ImageView
                android:id="@+id/details_name_image"
                android:padding="4dp" />

            <TextView
                android:id="@+id/details_name_header"
                android:text="Name:"
                android:padding="4dp"
                android:layout_marginRight="10dp"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/details_name"
                android:text="Jerad Phelps"
                android:padding="4dp"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </TableRow>


        <!-- Phone -->
        <TableRow
            android:id="@+id/phone_table_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp" >

            <ImageView
                android:id="@+id/details_phone_image"
                android:padding="4dp" />

            <TextView
                android:id="@+id/details_phone_header"
                android:text="Phone:"
                android:padding="4dp"
                android:layout_marginRight="10dp"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/details_phone"
                android:text="612-123-4567"
                android:padding="4dp"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </TableRow>


        <!-- Email -->
        <TableRow
            android:id="@+id/email_table_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp" >

            <ImageView
                android:id="@+id/details_email_image"
                android:padding="4dp" />

            <TextView
                android:id="@+id/details_email_header"
                android:text="Email:"
                android:padding="4dp"
                android:layout_marginRight="10dp"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/details_email"
                android:text="jphelps@hotmail.com"
                android:padding="4dp"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </TableRow>


        <!-- Twitter -->
        <TableRow
            android:id="@+id/twitter_table_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp" >

            <ImageView
                android:id="@+id/details_twitter_image"
                android:padding="4dp" />

            <TextView
                android:id="@+id/details_twitter_header"
                android:text="Twitter:"
                android:padding="4dp"
                android:layout_marginRight="10dp"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/details_twitter"
                android:text="\@jphelps"
                android:padding="4dp"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </TableRow>

    </TableLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <Button
            android:id="@+id/call_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:padding="16dp"
            android:layout_weight="1"
            android:text="Call" />

        <Button
            android:id="@+id/send_text_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:padding="16dp"
            android:layout_weight="1"
            android:text="Text" />

        <Button
            android:id="@+id/send_email_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_weight="1"
            android:padding="16dp"
            android:text="Email" />

    </LinearLayout>

</LinearLayout>